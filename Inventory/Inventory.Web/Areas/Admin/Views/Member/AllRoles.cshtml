@model List<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}
@section Scripts
{
    <script>
        $('#roles').on('click', '.show-bs-modal', function (event) {
            let id = $(this).data("id");
            let modal = $("#modal-default");
            modal.find('.modal-body p').text('Are you sure you want to delete this record?');
            $("#deleteId").val(id);
            $("#deleteForm").attr("action", "/admin/member/deleteRole");
            modal.modal('show');
        });
        $("#deleteButton").click(function () {
            $("#deleteForm").submit();
        });
    </script>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>All Roles Here</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">
                        <a asp-area="Admin" asp-controller="Member" asp-action="CreateRole" class="btn btn-info">
                            <i class="fas fa-plus"></i> Add Role
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a asp-area="Admin" asp-controller="Member" asp-action="UserRoles" class="btn btn-info">
                            User & Role
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">All available roles in here</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <partial name="_ResponsePartial" />
                        <partial name="_ModalPartial" />

                        @if (Model.Any())
                        {
                            <table id="roles" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td>@role.Name</td>
                                            <td>
                                                <button type="submit" class="btn btn-danger btn-sm show-bs-modal" data-id="@role.Id">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-info text-center">
                                <i class="fas fa-exclamation-circle"></i> No roles found.
                            </div>
                        }
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
</section>
