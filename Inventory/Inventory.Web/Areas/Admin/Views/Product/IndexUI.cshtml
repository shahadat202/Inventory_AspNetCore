@model List<ViewProductModel>
@{
    ViewData["Title"] = "All Products";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <p class="text-muted lead">Choose from a wide range of products to meet your needs.</p>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                    <!-- Responsive Column Sizing -->
                    <div class="card shadow-lg border-0 rounded h-100">
                        <!-- Ensuring uniform height -->
                        <div class="card-body d-flex flex-column">
                            <!-- Flex for equal height content -->
                            <div class="text-center mb-3">
                                <img src="@product.Image" alt="@product.Name"
                                     class="img-fluid rounded shadow-sm"
                                     style="width: 100%; height: 180px; object-fit: cover;" /> <!-- Fixed Image Size -->
                            </div>
                            <h5 class="text-secondary">Name: <strong class="h6 text-dark">@product.Name</strong></h5>
                            <h5 class="text-secondary">Price: <strong class="h6 text-dark">@product.SellingPrice TK</strong></h5>
                            <h5 class="text-secondary">In stock: <strong class="h6 text-dark">@product.StockQuantity</strong></h5>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <!-- Push content up -->
                                <h5 class="text-secondary mb-0">
                                    Status:
                                    <span class="h6 @(product.Status ? "text-success" : "text-danger")">@(product.Status ? "Active" : "Inactive")</span>
                                </h5>
                                <a href="#" class="btn btn-info btn-sm px-3 shadow-sm">
                                    ADD
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


