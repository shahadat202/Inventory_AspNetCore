@model ProductUpdateModel
@{
    ViewData["Title"] = "Update";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update Item</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Product" asp-action="Index">Product List</a></li>
                    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Product" asp-action="Insert">Add New</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Update one</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body p-4">
                        <form asp-antiforgery="true" asp-area="Admin" asp-controller="Product" asp-action="Update" method="post">
                            <div class="form-group position-relative">
                                <input type="text" asp-for="Name" class="form-control underlined-input" placeholder=" ">
                                <label class="floating-label">Name*</label>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="Category" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Category*</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="MeasurementUnit" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Measurement Unit*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="StockQuantity" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Stock Quantity*</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="Barcode" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Barcode*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="BuyingPrice" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">BuyingPrice*</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="SellingPrice" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">SellingPrice*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="Tax" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Tax*</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="SellingWithTax" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">SellingWithTax*</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <div class="form-check">
                                            <input type="checkbox" asp-for="Status" class="form-check-input">
                                            <label style="font-size: 15px; font-weight: bold; color: #999;">Is active item?</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group position-relative">
                                        <input type="text" asp-for="Description" class="form-control underlined-input" placeholder="">
                                        <label class="floating-label">Description</label>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4 py-2 mx-2">Save</button>
                                <button type="button" class="btn btn-danger px-4 py-2 mx-2" onclick="window.location.replace('/Admin/Product/Index');">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<style>
    .card {
        border-radius: 8px;
        overflow: hidden;
    }

    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
    }
    .form-group input {
        margin-bottom: 40px;
    }
    .underlined-input {
        width: 100%;
        border: none;
        border-bottom: 2px solid #aaa;
        border-radius: 0;
        padding: 10px 5px 5px;
        background: transparent;
        font-size: 16px;
        appearance: none; /* Remove number input arrows */
    }

        .underlined-input:focus {
            border-bottom: 2px solid #007bff;
            outline: none;
        }

    .floating-label {
        position: absolute;
        left: 5px;
        bottom: 8px;
        font-size: 15px;
        color: #999;
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .underlined-input:focus + .floating-label,
    .underlined-input:not(:placeholder-shown) + .floating-label {
        bottom: 35px;
        font-size: 14px;
        color: #007bff;
    }

    .underlined-input:focus {
        background: transparent !important;
    }

</style>